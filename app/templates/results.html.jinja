{% extends 'base.html.jinja' %}
{% block content %}
    <h5>Data for product with code: {{code}}</h5>
    <div class="download-button">
        <form action="{{ url_for('download')}}" method="post">
        <label for="code">Download the opinions file:</label>
        <button type="submit" name="download" value="download" class="download-button-style">Download</button>
    </div>
    <div class="display-images">
        {% if paths %}
            {% for path in paths: %}
                <img src="{{url_for('static', filename=path)}}">
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}